extends layout

block content
    div(class="container")
        div
            h1(class="form__title") #{title}
            p(class="form__message") CNPreview #{title}

        form#new_post.new_post(method='post', action='/posts')
          .field(class="form__input-group")
              input(class="form__input")#email(type='text', name='email', size='30' autofocus placeholder='Username or email')
          .field(class="form__input-group")
            input(class="form__input")#password(type='password', name='password' autofocus placeholder='Password')
            br
          .actions
            input(class="form__button")#post_submit(type='submit', value='Download Preview App')
